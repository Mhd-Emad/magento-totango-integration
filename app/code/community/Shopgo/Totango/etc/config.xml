<config>
    <modules>
        <Shopgo_Totango>
            <version>1.0.0</version>
        </Shopgo_Totango>
    </modules>
    <global>
        <helpers>
            <totango>
                <class>Shopgo_Totango_Helper</class>
            </totango>
        </helpers>
        <models>
            <totango>
                <class>Shopgo_Totango_Model</class>
            </totango>
        </models>
        <events>
            <sales_order_save_after>
                <observers>
                    <sales_order_save_after_handler>
                        <type>singleton</type>
                        <class>totango/observer</class>
                        <method>trackOrderStatus</method>
                    </sales_order_save_after_handler>
                </observers>
            </sales_order_save_after>
        </events>
    </global>
    <default>
        <shopgo_totango>
            <trackers>
                <product>1</product>
                <category>1</category>
                <attribute>1</attribute>
                <shipping_payment>1</shipping_payment>
                <complete_orders>1</complete_orders>
                <canceled_orders>1</canceled_orders>
                <admin_login>1</admin_login>
            </trackers>
        </shopgo_totango>
    </default>
</config>
